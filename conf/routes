# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Pages Routes
GET             /                               controllers.PageController.indexPage()
GET             /user                          controllers.PageController.getUserPage()
GET             /post                          controllers.PageController.getPostPage()
GET             /post/:id                       controllers.PageController.postDetail(id: Long)

# Users API Routes
GET             /api/users                      controllers.api.UserController.list
POST            /api/users                      controllers.api.UserController.create
GET             /api/users/:id                  controllers.api.UserController.get(id: Long)
PUT             /api/users/:id                  controllers.api.UserController.update(id: Long)
DELETE          /api/users/:id                  controllers.api.UserController.delete(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET             /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
